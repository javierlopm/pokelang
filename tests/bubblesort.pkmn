                          pINTachu size ):      

    pINTachu temp;
    pINTachu ordenados;
    pINTachu pos;
    --pINTachu ordenados;--
    VOIDtorb *voidtype;

    vamo_a_imprimi("hola mundo");

    vamo_a_itera ordenados = 0 |size-2|1: 
        vamo_a_itera pos = ordenados |size-2|1:
            si arr[pos] < arr[pos+1]:
                temp       = arr[pos+1];
                arr[pos+1] = arr[pos];
                arr[pos]   = temp;
